<div class="container">
  <div class="row">
    <div class="col">
      <h2>Modifier <%= resource_name.to_s.humanize %></h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Actuellement en attente de confirmation pour : <%= resource.unconfirmed_email %></p>
          <% end %>
          <%= f.input :address,
                      hint: "Laissez-le vide si vous ne voulez pas le changer",
                      required: false,
                      input_html: { autocomplete: "new-address" } %>
          <%= f.input :password,
                      hint: "Laissez-le vide si vous ne voulez pas le changer",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :current_password,
                      hint: "Nous avons besoin de votre mot de passe actuel pour confirmer vos modifications",
                      required: true,
                      input_html: { autocomplete: "current-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Modifier", class: "btn btn-light" %>
        </div>
      <% end %>

      <h3>Supprimer mon compte</h3>

      <div> <%= button_to "Supprimer", registration_path(resource_name), data: { confirm: "Vous êtes sûr?", turbo_confirm: "Vous êtes sûr?" }, class: "btn btn-light", method: :delete %></div>

      <%= link_to "Retour", :back, class: "btn btn-light mb-2 mt-2"%>
    </div>
  </div>
</div>

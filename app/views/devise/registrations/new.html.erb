<div class="container">
  <div class="row">
    <div class="col">
      <h2>S'inscrire</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "PrÃ©nom" }%>
          <%= f.input :last_name,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "Nom" }%>
          <%= f.input :address,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "Adresse" }%>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "Email" }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "Nouveau-mot-de-passe" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "Nouveau-mot-de-passe" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "S'inscrire", class: "btn btn-success" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

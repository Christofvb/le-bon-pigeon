<div class="bp-index-container">
    <div class="card-info">
        <h1>Vos réservations</h1>
        <hr>

        <% if @bookings.empty? %>
            <h2>Aie..</h2>
            <h4>Vous avez aucune réservation pour le moment</h4>
            <%= link_to "Découvrir nos pigeons", pigeons_path, class: "nav-link mt-4", style: "width: 250px;"%>
        <% else %>
        <% @bookings.each do |booking| %>
            <div class="affichage mb-5">
          <div class="bp-container-grid">
            <img src="<%= booking.pigeon.image_url %>" alt="Pigeon" />
                <div class="container__text">
                <h1><%= booking.user.first_name %></h1>
                <h2><%= booking.pigeon.name %></h2>

                <div class="container__text__star">
                    <p><%= booking.date_start%></p>
                </div>
                <div class="container__text__star">
                    <p><%= booking.date_end%></p>
                </div>
                <div class="container__text__star">
                    <p><%= booking.pigeon.price%>€</p>
                </div>
                  <%= link_to "Destroy this reservation", booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn"%>

                </div>
                </div>
            </div>

              <% end %>
             <button><%= link_to "Retourner voir les pigeons", pigeons_path,  class: "btn"%></button>
             <% end %>


</div>



    </div>
</div>
